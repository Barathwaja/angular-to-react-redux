<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
  <changeSet id="patient" author="ericarao">
    <createTable tableName="patients">
      <column name="id" type="int" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="dob" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="ssn" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="marital_status" type="tinyint">
        <constraints nullable="false"/>
      </column>
      <column name="gender" type="tinyint">
        <constraints nullable="false"/>
      </column>
      <column name="street_address" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="city" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="post_code" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="state" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="country" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="phone_number" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="billing_notes" type="text"/>
      <column name="patient_notes" type="text"/>
    </createTable>
  </changeSet>
  <changeSet id="contacts" author="ericarao">
    <createTable tableName="contacts">
      <column name="id" type="int" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="pid" type="int" autoIncrement="false">
        <constraints nullable="false" foreignKeyName="fk_patients_id" references="patients(id)"/>
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="relation" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="street_address" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="city" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="post_code" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="state" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="country" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="phone_number" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>